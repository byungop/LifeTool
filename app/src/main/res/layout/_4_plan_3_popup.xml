<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:weightSum="4"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2">

            <TextView
                android:id="@+id/plan_popup_textview_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시작시간"
                android:textSize="12dp"/>

            <EditText
                android:id="@+id/plan_popup_edittext_start"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="20dp"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="2">

            <TextView
                android:id="@+id/plan_popup_textview_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="종료시간"
                android:textSize="12dp"/>

            <EditText
                android:id="@+id/plan_popup_edittext_end"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="20dp"
                android:layout_weight="2"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2">

        <TextView
            android:id="@+id/plan_popup_textview_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계획"
            android:textSize="12dp"/>

        <EditText
            android:id="@+id/plan_popup_edittext_plan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="0.6">

        <Button
        android:id="@+id/plan_popup_button_yellow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="yellow"
        android:textSize="10dp"
        android:layout_weight="1"/>

        <Button
            android:id="@+id/plan_popup_button_green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="green"
            android:textSize="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/plan_popup_button_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="blue"
            android:textSize="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/plan_popup_button_purple"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="purple"
            android:textSize="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="0.6">

        <Button
            android:id="@+id/plan_popup_button_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="확인"
            android:textSize="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/plan_popup_button_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="취소"
            android:textSize="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>