<?xml version="1.0" encoding="utf-8"?>
<kr.chirokyel.lifeTool._1_Note_1_Note_1_Form_Layout
    android:id="@+id/note_form_linearlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="15dp"
    android:weightSum="7"
    android:background="@drawable/_0_basic_form_teduri">

    <Button
        android:id="@+id/note_form_button"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/note_form_imageview"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="4.6"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/note_form_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.3"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000"/>


</kr.chirokyel.lifeTool._1_Note_1_Note_1_Form_Layout>