<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="잠금설정"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <EditText
            android:id="@+id/lock_lock_edittext_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:hint="비밀번호를 입력하세요 (4자리, 숫자)"
            android:inputType="numberPassword"
            android:maxLength="4" />

        <EditText
            android:id="@+id/lock_lock_edittext_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:hint="한번 더 입력해주세요"
            android:inputType="numberPassword"
            android:maxLength="4"/>

        <TextView
            android:id="@+id/lock_lock_textview_passtest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:background="@drawable/_0_basic_form_teduri"/>

        <Button
            android:id="@+id/lock_lock_button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="잠금설정" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>